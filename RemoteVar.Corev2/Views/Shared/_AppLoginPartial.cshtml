@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
   
    var currentUser = UserManager.GetUserName(User);

    <div class="flex-center" style="margin-top: 20px">
        <div class="col-md-6">
            <form asp-action="Logout" asp-controller="Account">
                <div class="input-group ">
                    <span style="color: dodgerblue; font-weight: bolder"> @currentUser     <button type="submit" class="btn btn-link" style="color: red; font-weight: bold">(Logout)</button></span>
                
                </div>
            </form>
        </div>
        </div>
   
}