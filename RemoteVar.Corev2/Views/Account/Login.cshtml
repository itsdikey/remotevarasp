@model RemoteVar.Corev2.Models.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
    ViewData["Footer"] = false;
}

<div class="row text-center" style="vertical-align: central; background-color: #f0f0f0">
    <form method="post">
        <div class="login-form">
            <h2>#RemoteVar</h2>
            <div class="form-group ">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email"/>
                <i class="fa fa-user"></i>
            </div>
            <div class="form-group log-status">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password"/>
                <i class="fa fa-lock"></i>
            </div>
            <div class="form-group ">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <span class="alert">Invalid Credentials</span>
            <button type="button" class="log-btn">Log in</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
