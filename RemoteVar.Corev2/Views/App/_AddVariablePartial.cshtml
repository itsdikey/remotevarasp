@model AddVariableModel

<div class="row">
        <div class="col-md-offset-6 col-md-3">
            <button href="#" id="newAppBtn" class="btn btn-primary pull-right">New Variable</button>
        </div>
    </div>
    <div id="addApp" class="row">
        <div class="col-md-offset-6 col-md-3">
            <form asp-action="AddVariable" asp-controller="App" method="post">
                <input type="hidden" asp-for="AppId"/>
                <div class="form-group">
                    <input type="text" class="form-control" style="height: 34px" asp-for="VarName" placeholder="Variable Name"/>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" style="height: 34px" asp-for="VariableValue" placeholder="Variable Value"/>
                </div>
                <div class="form-group">
                    @{
                        List<SelectListItem> listItems = new List<SelectListItem>();
                        listItems.Add(new SelectListItem
                        {
                            Text = "Integer",
                            Value = "int",
                            Selected = true
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Float",
                            Value = "float"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "String",
                            Value = "String"
                        });
                        listItems.Add(new SelectListItem
                        {
                            Text = "Boolean",
                            Value = "bool"
                        });
                    }


                    @Html.DropDownListFor(model => model.VariableType, listItems, new {@class = "form-control", placeholder = "Variable Type", style = "height:34px"})
                </div>
                <div class="form-group pull-right">
                    <button type="submit" class="btn btn-success">ADD</button>
                    <button id="cancelappbtn" type="button" class="btn btn-danger">Cancel</button>
                </div>
            </form>
            </div>

    


    </div>
